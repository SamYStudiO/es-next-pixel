<theme>

    <formatVersion>4</formatVersion>
	<include>./common.xml</include>	
	
	<feature supported="carousel">
  
		<view name="system">

			<image name="background" extra="true" />
		
			<image name="system_carousel_background" extra="true">
				<color>222222</color>
			</image>
			
			<image name="system_carousel_border" extra="true">
				<color>222222</color>
			</image>
			
			<image name="systemInfoBack" extra="true">
				<color>222222</color>
			</image>

			<text name="systemInfo">
				<color>ffffff</color>
			</text>

		</view>

	</feature>
	
	<view name="system">
	
		<text name="logoText">
			<color>ffffff</color>
		</text>
		
		<text name="info1, info2, info3, info4, info5, info6, info7, info8, info9, info10, info11, info12" extra="true">
			<color>ffffff</color>
		</text>
		
	</view>
	
	<view name="basic, detailed">
	
		<textlist name="gamelist">
			<selectorColor>ffffff</selectorColor>
			<selectedColor>333333</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>ffffff</secondaryColor>
		</textlist>
		
	</view>
	
	<view name="basic">
	
		<image name="backtext1" extra="true">
			<color>222222ee</color>
		</image>
		
	</view>
	
	<view name="detailed">
	
		<image name="backtext2" extra="true">
			<color>222222ee</color>
		</image>
		<image name="backtext3" extra="true">
			<color>222222ee</color>
		</image>
		<image name="backtext4" extra="true">
			<color>222222ee</color>
		</image>
		<image name="backtext5" extra="true">
			<color>222222ee</color>
		</image>

		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_lbl_favorite, md_developer, md_publisher, md_genre, md_players, md_playcount, md_favorite, md_description, md_folder_name">
			<color>ffffff</color>
		</text>
		<datetime name="md_releasedate, md_lastplayed">
			<color>ffffff</color>
		</datetime>
		<text name="control" extra="true">
			<color>ffffff</color>
		</text>
		<text name="no_image" extra="true">
			<color>ffffff</color>
		</text>
		
	</view>
	
</theme>
