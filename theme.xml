<theme>

	<formatVersion>4</formatVersion>
	<include>./data/config.xml</include>
	<include>./$system/data/custom.xml</include>
	<include>./data/menus/next_pixel.xml</include>
	
	<view name="system">
	
		<!-- default music when system music is missing -->
		<sound name="directory">
			<path>/recalbox/share_init/system/.emulationstation/themes/recalbox-next/music</path>
		</sound>
		
		<!-- system music -->
		<sound name="bgsound">
			<path>./$system/music.ogg</path>
	    </sound>
		
	</view>
	
	<view name="system">
	
		<helpsystem name="help">
			<fontPath>/recalbox/share_init/system/.emulationstation/themes/recalbox-next/data/arts/steelfishrg.ttf</fontPath>
			<fontSize>.045</fontSize>
			<pos>.02 .945</pos>
		</helpsystem>
		
	</view>
	
	<view name="menu, basic, detailed">
	
		<helpsystem name="help">
			<pos>2 2</pos>
		</helpsystem>
		
	</view>
	
</theme>
